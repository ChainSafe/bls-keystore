{
  "name": "@nodefactory/keystore",
  "version": "1.0.0",
  "main": "lib/index.js",
  "repository": "git@github.com:NodeFactoryIo/bls-keystore.git",
  "author": "NodeFactory <info@nodefactory.io>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf lib",
    "build": "yarn run build:lib && yarn run build:types",
    "build:lib": "babel src -x .ts -d lib --source-maps",
    "build:types": "tsc --project ./tsconfig.build.json --declaration --outDir lib --emitDeclarationOnly",
    "check-types": "tsc --incremental --noEmit",
    "lint": "eslint --ext .ts src/"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@babel/runtime": "^7.7.2",
    "@types/jest": "^24.0.22",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "typescript": "^3.6.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "dependencies": {
    "@chainsafe/bls": "^0.1.7",
    "@chainsafe/eth2.0-types": "^0.1.1",
    "uuid": "^3.3.3"
  }
}
